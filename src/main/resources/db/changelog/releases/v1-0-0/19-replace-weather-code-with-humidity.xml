<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="v4-replace-weather-code-with-humidity" author="mateusz kmiec">
        <validCheckSum>1:any</validCheckSum>
        <renameColumn tableName="weather_forecast"
                      oldColumnName="weather_code"
                      newColumnName="humidity_pct"/>
    </changeSet>

    <changeSet id="v5-fix-humidity-type-to-integer" author="mateusz kmiec">
        <modifyDataType tableName="weather_forecast"
                        columnName="humidity_pct"
                        newDataType="integer"/>
    </changeSet>
</databaseChangeLog>
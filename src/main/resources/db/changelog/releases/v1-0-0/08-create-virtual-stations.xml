<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-virtual-stations" author="mateusz kmiec">
        <createTable tableName="virtual_stations">
            <column name="id" type="varchar(20)">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false" />
            </column>
            <column name="latitude" type="decimal(10,8)">
                <constraints nullable="false"/>
            </column>
            <column name="longitude" type="decimal(10,8)">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="boolean" defaultValueBoolean="true" />
        </createTable>
    </changeSet>
</databaseChangeLog>
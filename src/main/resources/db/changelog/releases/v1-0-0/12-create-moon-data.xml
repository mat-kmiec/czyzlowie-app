<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="create-moon-data" author="mateusz kmiec">
        <createTable tableName="moon_data">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="region_node" type="VARCHAR(10)">
                <constraints nullable="false"/>
            </column>

            <column name="phase_name" type="VARCHAR(50)"/>
            <column name="illumination" type="DECIMAL(5,4)"/> <column name="moon_age_days" type="DECIMAL(5,2)"/>
            <column name="distance_km" type="DECIMAL(10,2)"/>

            <column name="moonrise" type="TIMESTAMP"/>
            <column name="moonset" type="TIMESTAMP"/>
            <column name="major_period_start" type="TIMESTAMP"/> <column name="fetched_at" type="TIMESTAMP"/>
        </createTable>

        <addUniqueConstraint tableName="moon_data" columnNames="date, region_node" constraintName="uq_moon_data_region_date"/>
    </changeSet>
</databaseChangeLog>
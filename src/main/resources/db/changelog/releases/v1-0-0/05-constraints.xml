<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">


    <changeSet id="v1-0-0-20-performance-indexes" author="mateusz kmiec">
        <createIndex indexName="idx_logs_caught_at" tableName="fishing_logs">
            <column name="caught_at"/>
        </createIndex>

        <createIndex indexName="idx_meteo_stations_coords" tableName="imgw_meteo_stations">
            <column name="latitude"/>
            <column name="longitude"/>
        </createIndex>

        <createIndex indexName="idx_hydro_stations_coords" tableName="imgw_hydro_stations">
            <column name="latitude"/>
            <column name="longitude"/>
        </createIndex>

        <createIndex indexName="idx_fish_min_size" tableName="fish_species">
            <column name="min_size_cm"/>
        </createIndex>
    </changeSet>

    <changeSet id="v1-0-0-21-data-cleanup-indexes" author="mateusz kmiec">
        <createIndex indexName="idx_meteo_observed_at" tableName="imgw_meteo_data">
            <column name="observed_at"/>
        </createIndex>

        <createIndex indexName="idx_hydro_created_at" tableName="imgw_hydro_data">
            <column name="created_at"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>